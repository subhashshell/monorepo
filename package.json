{
  "name": "@monorepo/storybook",
  "private": true,
  "version": "1.0.0",
  "workspaces": {
    "packages": [
      "first",
      "second"
    ]
  },
  "scripts": {
    "start": "lerna run --parallel start",
    "serve": "lerna run --parallel serve",
    "clean": "lerna run --parallel clean",
    "prepare": "lerna run yarn",
    "test": "cd first; yarn test && cd second; yarn test",
    "test:coverage": "pnpm run -r test --coverage --watchAll"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "12.0.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.0.1",
    "babel-loader": "^8.2.5",
    "eslint": "^7.13.0",
    "eslint-plugin-import": "^2.26.0",
    "jest-environment-jsdom": "^28.1.3",
    "jest-silent-reporter": "^0.5.0",
    "lerna": "3.22.1",
    "pnpm": "^7.9.3",
    "prettier": "^2.0.5",
    "react-scripts": "5.0.1",
    "ts-jest": "^28.0.8",
    "typescript": "^4.2.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}",
      "**/src/setupTests.ts",
      "**/src/bootstrap.tsx",
      "**/src/index.ts"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react-scripts": "5.0.1"
      }
    }
  },
  "repository": {
    "url": "https://github.com/subhashshell/monorepo/storybook.git"
  }
}
